using @Console;

# Each program should have the class "Main" with minimum a public method "main" (which is the entry point)
class Main < Console {

    + !String greet = "foo";

    # This method is the program entry point ('+' means that is a public method)
    + main:Int () {
        !String hello = "Hello, World!";
        this.out(this.greetUser("Tripes"));
        >> 0;
    }


    - greetUser:String (String user) {
        String greetings = "Greetings " + user + "!";

        >> greetings;
    }

}