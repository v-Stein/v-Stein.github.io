

#{
  Hello World example
}

anon class < Console {

    + main:None (String[] args) {
        !String hello = "Hello World";

        this.out(hello);
    }

}

# -> Hello World


#{
  Greetings with private method exmaple
}

anon class < Console {

    + main:None (String[] args) {
        this.out(this.greet("John Doe"))
    }

    - greet:String (String user) {
        String greetings = "Greetings " + user + "!";

        >> greetings;
    }

}
# -> Greetings John Doe!


#{
  Inline methods example
}


anon class < Console {

    + main:None (String[] args) {
        Bool is42;

        is42 = :Bool () {
            !Int iAm42 = 42;
            !Int iAmNot42 = 15;

            >> (iAm42 === iAmNot42)
        }
        this.dump(is42)
    }

}

# -> Bool(false)



#{
  Inheritance protection
}

anon class < Console {

    + main:None (String[] args) {

    }

}

class Animal {

    :Int age;

    + main:None (Int age) {
        this.age = age;
    }

    :speak:String () {
        >> "Speaking."
    }

}

class Dog < Animal {

    + main:None (Int age) {
        this.Super(age);
    }

    : speak:String () {
        >> "Woof!";
    }

    - grow:Int () {
        >> ++this.age;
    }

    + grow:Bool () {
        Console.out("Not allowed to make myself grow!");
        >> false;
    }
}